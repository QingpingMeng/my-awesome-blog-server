{
  "name": "awesome-blog-server",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "start": "npm run serve",
    "build": "npm run clean && npm run build-ts && npm run tslint",
    "serve": "node dist/server.js",
    "clean": "rimraf dist",
    "watch-node": "nodemon dist/server.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
    "test": "jest --forceExit --coverage --verbose",
    "watch-test": "npm run test -- --watchAll",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "debug": "NODE_ENV=dev npm run build && npm run watch-debug",
    "serve-debug": "nodemon -r dotenv/config --inspect dist/server.js",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run serve-debug\""
  },
  "dependencies": {
    "axios": "^0.18.0",
    "body-parser": "^1.18.3",
    "compression": "^1.7.2",
    "cors": "^2.8.4",
    "dotenv": "^6.0.0",
    "errorhandler": "^1.5.0",
    "express": "^4.16.3",
    "express-graphql": "^0.6.12",
    "express-jwt": "^5.3.1",
    "express-session": "^1.15.6",
    "graphql": "^0.13.2",
    "jsonwebtoken": "^8.3.0",
    "lodash": "^4.17.10",
    "lusca": "^1.6.0",
    "mongoose": "^5.2.6",
    "passport": "^0.4.0",
    "passport-github2": "^0.1.11",
    "slug": "^0.9.1",
    "truncate-html": "^1.0.1",
    "winston": "^3.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist"
    ],
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "devDependencies": {
    "@types/axios": "^0.14.0",
    "@types/express-session": "^1.15.10",
    "@types/body-parser": "^1.16.8",
    "@types/compression": "^0.0.35",
    "@types/cors": "^2.8.4",
    "@types/dotenv": "^4.0.2",
    "@types/errorhandler": "^0.0.32",
    "@types/express": "^4.11.1",
    "@types/express-graphql": "^0.6.1",
    "@types/express-jwt": "^0.0.40",
    "@types/graphql": "^0.13.1",
    "@types/jest": "^23.3.1",
    "@types/jsonwebtoken": "^7.2.8",
    "@types/lodash": "^4.14.115",
    "@types/lusca": "^1.5.0",
    "@types/mongodb-memory-server": "^1.8.0",
    "@types/mongoose": "^5.2.3",
    "@types/node": "^9.4.6",
    "@types/passport": "^0.4.6",
    "@types/passport-github2": "^1.2.0",
    "@types/slug": "^0.9.0",
    "@types/winston": "^2.3.9",
    "concurrently": "^3.6.0",
    "jest": "^23.4.2",
    "mongodb-memory-server": "^1.9.1",
    "nodemon": "^1.13.0",
    "rimraf": "^2.6.2",
    "ts-jest": "^23.0.1",
    "tslint": "^5.10.0",
    "typescript": "^2.7.2"
  }
}
